<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><i class="fas fa-user-plus"></i>Sign Up</h1>
            
            <%- include ("./partials/messages") %>
            <form action="/users/register" method="POST">
                <div class="form-group mb-3">
                    <label for="name">Name</label>
                    <input
                        type="name" id="name" name="name"
                        class="form-control" placeholder="Enter Name"
                        value="<%= typeof name !== 'undefined' ? name : '' %>"/>
                </div>
                <div class="form-group mb-3">
                    <label for="email">Email</label>
                    <input
                        type="email" id="email" name="email"
                        class="form-control" placeholder="Enter Email"
                        value="<%= typeof email !== 'undefined' ? email : '' %>"/>
                </div>
                <div class="form-group mb-3">
                    <label for="password">Password</label>
                    <input
                        type="password" id="password" name="password"
                        class="form-control" placeholder="Enter Password"
                        value="<%= typeof password !== 'undefined' ? password : '' %>"/>
                </div>
                <div class="form-group mb-3">
                    <label for="confirmPassword">Confirm Password</label>
                    <input
                        type="password" id="confirmPassword" name="confirmPassword"
                        class="form-control" placeholder="Confirm Password"
                        value="<%= typeof confirmPassword !== 'undefined' ? confirmPassword : '' %>"/>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
            </form>
            <p class="lead mt-4">Already Have An Account? <a href="/users/Login">Login</a></p>
            <div class="flex-wrap text-center mt-3">
                <p>Or Login With</p>
                <div class="lead mt-3"><a href="/users/auth/facebook">
                    <button class="btn btn-secondary w-100">
                        <i class="fab fa-facebook fa-lg"></i> Facebook</button>
                </a></div>
                <div class="lead mt-3"></div><a class="lead mt-3" href="/auth/google">
                    <button class="btn btn-secondary w-100">
                        <i class="fab fa-google fa-lg"></i> Google</button>
                </a></div>
                <div class="lead mt-3"><a class="mt-2" href="/auth/linkedin">
                    <button class="btn btn-secondary w-100">
                        <i class="fab fa-linkedin-in fa-lg"></i> LinkedIn</button>
                </a></div>
                <div class="lead mt-3"><a href="/auth/instagram">
                    <button class="btn btn-secondary w-100">
                        <i class="fab fa-instagram fa-lg"></i> Instagram</button>
                </a></div>
            </div>
        </div>
    </div>
</div>

